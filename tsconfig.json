{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2016",
    "jsx": "preserve",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
